<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thinkgem.jeesite.modules.demo.dao.DemoTestDao">
    
	<sql id="demoTestColumns">
		a.id AS "id",
		a.name AS "name",
		a.age AS "age"
	</sql>
	
	<sql id="demoTestJoins">
	</sql>
    
	<select id="get" resultType="DemoTest">
		SELECT 
			<include refid="demoTestColumns"/>
		FROM demo_test a
		<include refid="demoTestJoins"/>
		WHERE a.id = #{id}
	</select>
	
	<select id="findList" resultType="DemoTest">
		SELECT 
			<include refid="demoTestColumns"/>
		FROM demo_test a
		<include refid="demoTestJoins"/>
		<where>
			
			<if test="name != null and name != ''">
				AND a.name LIKE 
					<if test="dbName == 'oracle'">'%'||#{name}||'%'</if>
					<if test="dbName == 'mssql'">'%'+#{name}+'%'</if>
					<if test="dbName == 'mysql'">concat('%',#{name},'%')</if>
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<select id="findAllList" resultType="DemoTest">
		SELECT 
			<include refid="demoTestColumns"/>
		FROM demo_test a
		<include refid="demoTestJoins"/>
		<where>
			
		</where>		
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<insert id="insert">
		INSERT INTO demo_test(
			id,
			name,
			age
		) VALUES (
			#{id},
			#{name},
			#{age}
		)
	</insert>
	
	<update id="update">
		UPDATE demo_test SET 	
			name = #{name},
			age = #{age}
		WHERE id = #{id}
	</update>
	
	<update id="delete">
		DELETE FROM demo_test
		WHERE id = #{id}
	</update>
	
</mapper>